{
  "info": {
    "name": "Auth Dashboard API",
    "description": "Complete API collection for Auth Dashboard with JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"testuser@example.com\", \"full_name\": \"Test User\", \"password\": \"SecurePassword123!\"}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"testuser@example.com\", \"password\": \"SecurePassword123!\"}"
            },
            "url": {
              "raw": "http://localhost:8000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/users/me",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"title\": \"Buy groceries\", \"description\": \"Milk, bread, eggs\"}"
            },
            "url": {
              "raw": "http://localhost:8000/api/tasks/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", ""]
            }
          }
        },
        {
          "name": "List All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", ""]
            }
          }
        },
        {
          "name": "Search Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/?search=groceries",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", ""],
              "query": [
                {
                  "key": "search",
                  "value": "groceries"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Task",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", "1"]
            }
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"title\": \"Updated task\", \"description\": \"Updated description\", \"status\": \"completed\"}"
            },
            "url": {
              "raw": "http://localhost:8000/api/tasks/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", "1"]
            }
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:8000/api/tasks/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tasks", "1"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ]
}
